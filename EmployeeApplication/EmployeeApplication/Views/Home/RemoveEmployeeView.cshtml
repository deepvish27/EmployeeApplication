
@{
    ViewBag.Title = "RemoveEmployeeView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Remove Employee</h2>
<div class="container">
    <form action="../Home/RemoveEmployee" method="post">
        <table>
            <tr>
                <td>
                    <span>Employee ID: </span>
                </td>
                <td>
                    <input type="number" class="form-control" id="numRemoveEmpID" name="id" />
                </td>
            </tr>
        </table>
        <button type="submit" class="btn btn-danger" id="btnRemoveEmployee">Delete Employee</button>
    </form>    
</div>

