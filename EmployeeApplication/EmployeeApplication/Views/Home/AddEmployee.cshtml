
@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>AddEmployee</h2>
</div>

<div class="container" >
    <form action="~/Home/AddEmployee" method="post">
        <table class="table" style="position:center;">
            <tr>
                <td>
                    <span>First Name</span>
                </td>
                <td>
                    <input class="form-control" type="text" id="txtFirstName" name="FirstName" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Last Name</span>
                </td>
                <td>
                    <input class="form-control" type="text" id="txtLastName" name="LastName" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Age</span>
                </td>
                <td>
                    <input class="form-control" type="number" id="numAge" name="Age" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Salary</span>
                </td>
                <td>
                    <input class="form-control" type="number" id="numSalary" name="Salary" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Marital Status</span>
                </td>
                <td>
                    <input class="radio" type="radio" id="rdoMarried" name="MaritalStatus" value="true" />Married
                    <input class="radio" type="radio" id="rdoMarried" name="MaritalStatus" value="false" />Unmarried
                </td>
            </tr>
            <tr>
                <td>
                    <span>Location</span>
                </td>
                <td>
                    <select class="dropdown" id="lstLocation" name="Location">
                        <option>Select Location</option>
                        <option>Nagpur</option>
                        <option>Pune</option>
                        <option>Mumbai</option>
                        <option>Chennai</option>
                        <option>Hyderabad</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Skills</span>
                </td>
                <td>
                    <select class="" id="lstSkills" name="Skills">
                        <option>Select Skill</option>
                        <option>.NET</option>
                        <option>Java</option>
                        <option>Python</option>
                        <option>BI</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="submit" id="btnAddEmployee" class="btn btn-primary">Add Employee</button>
                </td>
            </tr>
        </table>
    </form>
</div>

