
@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using EmployeeApplication.ViewModels
@using EmployeeApplication.Models;
@model SkillAndLocationVM

<div class="text-center" style="padding:20px;">
    <h4>AddEmployee</h4>
</div>

<div class="container" >
    <form action="~/Home/AddEmployee" method="post">
        <table class="table table-borderless" align="center" style="width:45%">
            <tr>
                <td>
                    <span>First Name</span>
                </td>
                <td>
                    <input class="form-control" type="text" id="txtFirstName" name="FirstName" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Last Name</span>
                </td>
                <td>
                    <input class="form-control" type="text" id="txtLastName" name="LastName" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Age</span>
                </td>
                <td>
                    <input class="form-control" type="number" id="numAge" name="Age" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Salary</span>
                </td>
                <td>
                    <input class="form-control" type="number" id="numSalary" name="Salary" />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Marital Status</span>
                </td>
                <td>
                    <select id="lstMaritalStatus" name="MaritalStatus">
                        <option value="true">Married</option>
                        <option value="false">Unmarried</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Location</span>
                </td>
                <td>
                    <select class="dropdown" id="lstLocation" name="LocationName">
                        <option value="default">Select Location</option>
                        @foreach(Locations item in Model.locationNames)
                        {
                            <option>@item.Location</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Skills</span>
                </td>
                <td>
                    <select class="" id="lstSkill" name="SkillName">
                        <option value="default">Select Skill</option>  
                        @foreach(Skills item in Model.skillNames)
                        {
                            <option>@item.Skill</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <label id="lblAddValidationMsg" style="color:red;" hidden="hidden"></label>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="submit" id="btnAddEmployee" class="btn btn-primary" onclick="return ValidateAddForm()">Add Employee</button>
                </td>
            </tr>
        </table>
    </form>
</div>

